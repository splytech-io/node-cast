{
  "name": "@splytech-io/cast",
  "version": "1.1.1",
  "description": "Cast documents",
  "main": "index",
  "typings": "index.d",
  "scripts": {
    "test": "nyc mocha --require ts-node/register --exit '*.spec.ts'",
    "lint": "tslint --project .",
    "lint:fix": "tslint --project . --fix",
    "build": "tsc",
    "prepush": "npm run lint",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "mongodb",
    "document",
    "cast"
  ],
  "author": "Andrius Skerla",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/flat": "0.0.28",
    "@types/lodash": "^4.14.106",
    "flat": "^4.0.0",
    "lodash": "^4.17.5"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
      "ts": "node_modules/.bin/ts-node"
    },
    "watch": [
      "src/**/*.ts"
    ],
    "ext": "ts"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "include": [
      "*.ts"
    ],
    "exclude": [
      "*.spec.ts"
    ]
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "husky": "^3.0.2",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.5.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/splytech-io/node-cast.git"
  },
  "bugs": {
    "url": "https://github.com/splytech-io/node-cast/issues"
  },
  "homepage": "https://github.com/splytech-io/node-cast#readme"
}
